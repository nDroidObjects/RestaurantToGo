<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingLeft="@dimen/view_horizontal_margin"
    android:paddingTop="@dimen/view_vertical_margin"
    android:paddingRight="@dimen/view_horizontal_margin"
    android:paddingBottom="@dimen/view_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_restaurant_name"
        android:id="@+id/restaurantName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_cuisine"
        android:id="@+id/restaurantCuisine"
        android:layout_below="@+id/restaurantName"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/view_horizontal_margin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/list_item_arrow"
        android:contentDescription="@string/arrow_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_locations"
        android:id="@+id/restaurantLocations"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_marginRight="@dimen/view_horizontal_margin" />
</RelativeLayout>